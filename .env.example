# Server Configuration
PORT=3002
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/pg_hostel
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_INITDB_DATABASE=pg_hostel

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=86400 # 24 hours in seconds

# API Gateway Integration
ENABLE_API_GATEWAY=false
GATEWAY_TRUST_PROXY=true
API_KEY=your_api_key_here

# Tracing and Monitoring
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true

# Rate Limiting
RATE_LIMIT_WINDOW=15 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# AWS S3 Configuration (required for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-south-1
S3_BUCKET=your_s3_bucket_name_here

# Tenant API Settings
TENANT_TOKEN_EXPIRY=86400 # 24 hours in seconds

# Landlord API Settings
LANDLORD_TOKEN_EXPIRY=86400 # 24 hours in seconds
